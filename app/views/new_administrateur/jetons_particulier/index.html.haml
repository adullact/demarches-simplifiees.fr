= render partial: 'new_administrateur/breadcrumbs',
  locals: { steps: [link_to('Démarches', admin_procedures_path),
                    link_to(@procedure.libelle, admin_procedure_path(@procedure)),
                    'Jeton Particulier'] }

.container
  .card
    .flex.justify-between
      %div
        .card-title Jeton
        %p.notice= @procedure.api_particulier_token.blank? ? 'À définir' : 'Personnalisé'

      %div
        = link_to 'Modifier', jeton_admin_procedure_jetons_particulier_path(@procedure), class: 'button'
  .card
    .flex.justify-between
      %div
        .card-title Sources de données
        %p.notice= @procedure.api_particulier_sources.blank? ? 'À définir' : 'Personnalisées'

      %div
        = link_to 'Modifier', sources_admin_procedure_jetons_particulier_path(@procedure), class: 'button'
